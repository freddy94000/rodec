{% if pageCount > 1 %}
    <nav id="pagintation-news">
        <ul class="pagination">
            <li class="{{ (first is defined and current != first) ? '' : 'disabled' }}">
                <a href="{{ (first is defined and current != first) ? path(route, query|merge({(pageParameterName): first})) : '#' }}">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            <li class="{{ (previous is defined) ? '' : 'disabled' }}">
                <a href="{{ (previous is defined) ? path(route, query|merge({(pageParameterName): previous})) : '#' }}">
                    <span aria-hidden="true">&lsaquo;</span>
                </a>
            </li>

            {% for page in pagesInRange %}
                {% if page != current %}
                    <li>
                        <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="active"><a href="">{{ page }}</a></li>
                {% endif %}

            {% endfor %}

            <li class="{{ (next is defined) ? '' : 'disabled' }}">
                <a href="{{ (next is defined) ? path(route, query|merge({(pageParameterName): next})) : '#' }}">
                    <span aria-hidden="true">&rsaquo;</span>
                </a>
            </li>

            <li class="{{ (last is defined and current != last) ? '' : 'disabled' }}">
                <a href="{{ (last is defined and current != last) ? path(route, query|merge({(pageParameterName): last})) : '#' }}">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
{% endif %}
