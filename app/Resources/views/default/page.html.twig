{% extends 'base.html.twig' %}

{% block title %}
    {{ page.title }} - {{ parent() }}
{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}">Accueil</a></li>
        {% if page.node %}
            {% if page.node.nodeParent %}
                {% if page.node.nodeParent.nodeParent %}
                    <li><a href="{{ path('page', { 'code': page.node.nodeParent.nodeParent.url }) }}">{{ page.node.nodeParent.nodeParent.title }}</a></li>
                {% endif %}
                <li><a href="{{ path('page', { 'code': page.node.nodeParent.url }) }}">{{ page.node.nodeParent.title }}</a></li>
            {% endif %}
        {% endif %}
        <li class="active">{{ page.title }}</li>
    </ol>
    <div class="row">
        <div class="col-sm-16 col-xs-24">
            <h1>{{ page.title }}</h1>
            {{ page.content|raw }}
        </div>
        <div class="col-sm-8 col-xs-24">
            {% include 'default/block.html.twig' %}
        </div>
    </div>
{% endblock %}
