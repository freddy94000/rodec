{% extends 'base.html.twig' %}

{% block title %}
    {{ page.title }} - {{ parent() }}
{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="section-heading text-center">{{ page.title }}</h2>
                    {% if page.image %}
                        <div class="image-page">
                            <img src="{{ asset('images/' ~ page.image.imageName) }}"/>
                        </div>
                    {% endif %}
                    {{ page.content|raw }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}



{% block javascripts %}
    {{ parent() }}
    <script type="application/javascript">
        (function($) {
            "use strict";

            $('#mainNav').removeClass('affix-top').addClass('affix')
        })(jQuery);
    </script>
{% endblock %}